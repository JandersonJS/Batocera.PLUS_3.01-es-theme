<?xml version="1.0" encoding="UTF-8" ?>
<theme>
    <formatVersion>4</formatVersion>

    <customView name="Boxes">
        <imagegrid name="gamegrid">
            <autoLayout>4 2</autoLayout>
        </imagegrid>
    </customView>

    <view name="system">
        <image name="background" extra="true">
        </image>

        <image name="console" extra="true" ifSubset="systemview:plus">
            <maxSize>0.30 0.30</maxSize>
        </image>

        <image name="console" extra="true" ifSubset="systemview:plus2">
            <maxSize>0.35 0.35</maxSize>
        </image>

        <image name="game" extra="true" ifSubset="systemview:plus">
            <maxSize>0.20 0.20</maxSize>
            <pos>0.15 0.325</pos>
        </image>

        <image name="game" extra="true" ifSubset="systemview:plus2">
            <maxSize>0.20 0.20</maxSize>
            <pos>0.25 0.425</pos>
        </image>

        <image name="controller" extra="true">
        </image>

        <image name="ControllerOverlay" extra="true">
            <tile>false</tile>
            <size>0.25 0.25</size>
        </image>

        <image name="band1" extra="true">
            <color>0000FF</color>
        </image>

        <image name="band2" extra="true">
            <color>FFFFFF</color>
        </image>

        <image name="band3" extra="true">
            <color>FF0000</color>
        </image>

        <image name="band4" extra="true">
            <color>FFA500</color>
        </image>

        <text name="info1" extra="true">
            <text>Manufacturer : Sun Microsystems</text>
            <pos>0.38 0.70</pos>
        </text>

        <text name="info2" extra="true">
            <text>Year of Release : 1995</text>
            <pos>0.38 0.72</pos>
        </text>

        <text name="info3" extra="true">
            <text>Units sold : Freeware</text>
            <pos>0.38 0.74</pos>
        </text>

        <text name="info4" extra="true">
            <text>Generation : 	Unavailable</text>
            <pos>0.38 0.76</pos>
        </text>

        <text name="info5" extra="true">
            <text>CPU : x86 x64</text>
            <pos>0.38 0.78</pos>
        </text>

        <text name="info6" extra="true">
            <text>RAM : 512 MB</text>
            <pos>0.38 0.80</pos>
        </text>

        <text name="info7" extra="true">
            <text>ROM : 140 MB</text>
            <pos>0.38 0.82</pos>
        </text>

        <text name="info8" extra="true">
            <text>GPU : Full PBP functionality requires an accelerated graphics card</text>
            <pos>0.38 0.84</pos>
        </text>

        <text name="info9" extra="true">
            <text>Sound chip : DirectSound3 should work</text>
            <pos>0.38 0.86</pos>
        </text>

        <text name="info10" extra="true">
            <text>Resolution : 640x480 Pixels</text>
            <pos>0.38 0.88</pos>
        </text>
    </view>
</theme>
