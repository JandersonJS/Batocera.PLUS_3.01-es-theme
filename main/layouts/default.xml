<?xml version="1.0" encoding="UTF-8" ?>
﻿<theme>
    <formatVersion>4</formatVersion>

    <customView name="Boxes">
        <imagegrid name="gamegrid">
            <autoLayout>4 2</autoLayout>
        </imagegrid>
    </customView>

    <view name="system">
        <image name="background" extra="true">
        </image>

        <image name="console" extra="true">
        </image>

        <image name="game" extra="true">
        </image>

        <image name="controller" extra="true">
        </image>

        <image name="band1" extra="true">
            <path>./main/midia/square.svg</path>
            <color>${baseColor}</color>
        </image>

        <image name="band2" extra="true">
            <color>${baseColor}</color>
        </image>

        <image name="band3" extra="true">
            <color>${baseColor}</color>
        </image>

        <image name="band4" extra="true">
            <path>./main/midia/squared.svg</path>
            <color>${baseColor}</color>
        </image>
    </view>
</theme>
