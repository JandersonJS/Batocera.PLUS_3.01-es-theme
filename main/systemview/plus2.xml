<?xml version="1.0" encoding="UTF-8" ?>
<theme>
    <formatVersion>7</formatVersion>

    <view name="system">

        <image name="avatar" extra="static">
             <path>./main/avatars/${image.avatar}</path>
             <path ifSubset="system-avatar:custom">./custom-avatar.png</path>
             <pos>0.802 0.035</pos>
             <maxSize>0.063 0.063</maxSize>
             <zIndex>99</zIndex>
             <linearSmooth>true</linearSmooth>
        </image>

       <webimage name="cheevos_avatar"  extra="static" if="{global.cheevos} == true" ifSubset="system-avatar:cheevos">
             <path>https://media.retroachievements.org/UserPic/${global.cheevos.username}.png</path>
             <roundCorners>0.5</roundCorners>
             <pos>0.8025 0.041</pos>
             <maxSize>0.048 0.048</maxSize>
             <zIndex>99</zIndex>
             <linearSmooth>true</linearSmooth>
       </webimage>

      <text name="username" extra="static">
         <text>${theme.nick}</text>
         <text ifSubset="system-username:custom">${custom.nick}</text>
         <pos>0.840 0.045</pos>
         <size>0.035 0.005</size>
         <autoScroll>horizontal</autoScroll>
         <color>ffffff</color>
         <fontPath>./fonts/SST Light.ttf</fontPath>
         <fontSize>0.028</fontSize>
         <alignment>left</alignment>
         <glowColor>00000035</glowColor>
         <glowSize>1</glowSize>
         <glowOffset>3 2</glowOffset>
         <zIndex>99</zIndex>
         <backgroundColor>ff000000</backgroundColor>
      </text>  
       
        <image name="background" extra="true">
            <tile>true</tile>
            <size>1 1</size>
            <pos>0 0</pos>
            <origin>0 0</origin>
            <path>./main/media/carbon_fiber.png</path>
            <color>FFFFFF</color>
        </image>   

        <video name="videobox" extra="true" ifSubset="randomVideosAudio:on">
        </video>
        
        <video name="videobox" extra="true" ifSubset="randomVideosAudio:off">
            <audio>false</audio>
        </video>

        <video name="video" extra="true" ifSubset="randomVideosAudio:on">
        </video>

        <video name="video" extra="true" ifSubset="randomVideosAudio:off">
            <audio>false</audio>
        </video>

        <image name="staticBackground" extra="static" tinyScreen="false">
            <tile>false</tile>
            <pos>0.816 0.066</pos>
            <origin>0.5 0.5</origin>
            <zIndex>85</zIndex>
        </image>

        <image name="staticBackground2" extra="static" tinyScreen="false">
            <tile>false</tile>
            <pos>0.8585 0.066</pos>
            <origin>0.5 0.5</origin>
            <zIndex>45</zIndex>
        </image>

        <image name="band1" extra="static">
            <size>0.03 1</size>
            <origin>0 0</origin>
            <zIndex>50</zIndex>
            <path>./main/media/band.svg</path>
        </image>

        <image name="band2" extra="static">
            <size>0.03 1</size>
            <origin>0 0</origin>
            <zIndex>50</zIndex>
            <path>./main/media/band.svg</path>
        </image>

        <image name="band3" extra="static">
            <size>0.03 1</size>
            <origin>0 0</origin>
            <zIndex>50</zIndex>
            <path>./main/media/band.svg</path>
        </image>

        <image name="band4" extra="static">
            <size>0.03 1</size>
            <origin>0 0</origin>
            <zIndex>50</zIndex>
            <path>./main/media/band.svg</path>
        </image>

        <include>./main/layouts/${system.theme}.xml</include>

        <image name="band5" extra="static">
            <size>0.12 1</size>
            <pos>0 0</pos>
            <origin>0 0</origin>
            <zIndex>35</zIndex>
            <path>./main/media/band.svg</path>
        </image>

        <image name="band6" extra="static">
            <pos>0 0.05</pos>
            <size>0.03 1</size>
            <origin>0 0</origin>
            <color>${baseColor}</color>
            <zIndex>35</zIndex>
            <path>./main/media/square.svg</path>
        </image>

        <image name="band7" extra="static">
            <pos>0.029 0.05</pos>
            <size>0.03 1</size>
            <origin>0 0</origin>
            <color>${baseColor}</color>
            <zIndex>35</zIndex>
            <path>./main/media/squared.svg</path>
        </image>

        <image name="band8" extra="static">
            <pos>0.058 0.05</pos>
            <size>0.03 1</size>
            <origin>0 0</origin>
            <color>${baseColor}</color>
            <zIndex>35</zIndex>
            <path>./main/media/band.svg</path>
        </image>

        <image name="console" extra="true">
            <pos>0.13 0.425</pos>
            <maxSize>0.25 0.30</maxSize>
            <origin>0 1</origin>
            <path>./main/plus/console/${system.theme}.svg</path>
            <path>./main/plus/console/${system.theme}.png</path>
            <zIndex>99</zIndex>
        </image>

        <image name="game" extra="true">
            <pos>0.40 0.425</pos>
            <maxSize>0.15 0.15</maxSize>
            <origin>0 1</origin>
            <path>./main/plus/game/${system.theme}.svg</path>
            <path>./main/plus/game/${system.theme}.png</path>
            <zIndex>99</zIndex>
        </image>

        <image name="controller" extra="true">
            <pos>0.79 0.425</pos>
            <maxSize>0.10 0.30</maxSize>
            <origin>1 1</origin>
            <path>./main/plus/controller/${system.theme}.svg</path>
            <path>./main/plus/controller/${system.theme}.png</path>
            <zIndex>99</zIndex>
        </image>

        <image name="ControllerOverlay" extra="true">
            <visible>false</visible>
        </image>

        <image name="fundoplus" extra="static">
            <tile>false</tile>
            <color>${baseColor}</color>
            <pos>0 0.025</pos>
            <size>0.85 0.45</size>
            <origin>0 0</origin>
            <path>./main/media/squared.svg</path>
            <zIndex>34</zIndex>
       </image>

        <carousel name="systemcarousel">
            <color>ffffff</color>
            <pos>0 0.665</pos>
            <zIndex>60</zIndex>
        </carousel>

        <image name="colorplus" extra="static" tinyScreen="false">
            <tile>false</tile>
      	    <color>${baseColor}</color>
            <pos>0 0</pos>
            <size>1 0.5</size>
            <origin>0 0</origin>
            <path>./main/media/colorplus.png</path>
            <zIndex>10</zIndex>
       </image>

        <image name="colorplus2" extra="static" tinyScreen="false">
            <tile>false</tile>
      	    <color>${baseColor}</color>
            <pos>0 0.665</pos>
            <size>1 0.28</size>
            <origin>0 0</origin>
            <path>./main/media/colorplus.png</path>
            <zIndex>55</zIndex>
       </image>

  <feature supported="manufacturer">
    <view name="system">
      <text name="manufacturerName" extra="static">
        <text>${system.sortedBy}</text>
        <alignment>center</alignment>
        <verticalAlignment>top</verticalAlignment>
        <fontPath>./main/fonts/ubuntu_bold.ttf</fontPath>
        <fontSize>0.060</fontSize>
        <pos>0.029 0.037</pos>
        <size>0.942 0.28</size>
        <color>C0C0C0</color>      
        <zIndex>100</zIndex>
        <color>ff9900</color>
        <glowColor>00000080</glowColor>
        <glowSize>1</glowSize>

        <fontSize tinyScreen="true">0.065</fontSize>
        <glowSize tinyScreen="true">1</glowSize>
      </text>
      <text name="fullName" extra="true">
        <text>${system.fullName}</text>
        <alignment>center</alignment>
        <verticalAlignment>top</verticalAlignment>
        <fontPath>./main/fonts/ubuntu_bold.ttf</fontPath>
        <fontSize>0.024</fontSize>
        <pos>0.03 0.12</pos>
        <pos verticalScreen="true">0.03 0.10</pos>         
        <size>0.94 0.28</size>
        <zIndex>100</zIndex>
        <color>ff9900</color>
        <glowColor>000000A0</glowColor>
        <glowSize>1</glowSize>
        
        <pos tinyScreen="true">0.03 0.13</pos>
        <glowColor tinyScreen="true">00000040</glowColor>
        <fontSize tinyScreen="true">0.035</fontSize>
      </text>
      <text name="releaseYyear" extra="true">
        <text>${system.releaseYearOrNull}</text>
        <alignment>center</alignment>
        <verticalAlignment>top</verticalAlignment>
        <fontPath>./main/fonts/ubuntu_bold.ttf</fontPath>
        <fontSize>0.024</fontSize>
        <pos>0.03 0.157</pos>
        <pos verticalScreen="true">0.03 0.127</pos>         
        <size>0.94 0.28</size>        
        <zIndex>100</zIndex>
        <color>ff9900</color>
        <glowColor>000000A0</glowColor>
        <glowSize>1</glowSize>
                
        <pos tinyScreen="true">0.03 0.19</pos>
        <glowColor tinyScreen="true">00000040</glowColor>
        <fontSize tinyScreen="true">0.035</fontSize>
      </text> 
    </view>
  </feature>

    <text name="systemInfo" visible="true"/>

        <text name="systemInfo">
            <pos>0 0.9</pos>
            <size>1 0.045</size>
            <fontPath>./main/fonts/ubuntu_bold.ttf</fontPath>
            <fontSize>0.024</fontSize>
            <backgroundColor>00000000</backgroundColor>
            <color>ff9900</color>
            <glowColor>000000A0</glowColor>
            <systemInfoDelay>0</systemInfoDelay>
            <glowSize>1</glowSize>
            <zIndex>100</zIndex>
        </text>

    <text name="systemInfoEx," extra="true">
      <!-- possible bindings are :
{binding:total}, {binding:played}, {binding:favorites}, {binding:hidden}, {binding:gamesPlayed}
{binding:mostPlayed}, {binding:lastPlayedDate}
-->

      <text>
Playing : {binding:played}
Favorites : {binding:favorites} 
Games played : {binding:gamesPlayed} 
      </text>
      <text lang="pt">
Jogando : {binding:played}
Favoritos : {binding:favorites} 
Games Jogados : {binding:gamesPlayed} 
      </text>
      <text lang="fr">
Jouant : {binding:played}
Favoris : {binding:favorites}
Jeux joués : {binding:gamesPlayed}
      </text>
      <text lang="es">
Jugando : {binding:played}
Favoritos : {binding:favorites}
Jugados : {binding:gamesPlayed}
      </text>
      <alignment>left</alignment>
      <verticalAlignment>left</verticalAlignment>
      <fontPath>./main/fonts/ubuntu_bold.ttf</fontPath>
      <fontSize>0.022</fontSize>
      <pos>0.13 0.43</pos>
      <size>0.15 0.28</size>
      <zIndex>100</zIndex>
      <color>ff9900</color>
      <glowColor>000000A0</glowColor>
      <systemInfoDelay>0</systemInfoDelay>
      <glowSize>1</glowSize>
    </text>
    <text name="systemInfoEx" extra="true" if="{system.name} == 'collections'">
      <text>Collections : {binding:subSystems}</text>
      <text lang="fr">Nombre de collections : {binding:subSystems}</text>
    </text>
    <text name="systemInfoEx" extra="true" if="{system.name} == 'library' || {system.name} == 'screenshots'">
      <text>Items : {binding:total}</text>
      <text lang="fr">Nombre d'élements : {binding:total}</text>
      <text lang="es">Número de elementos: {binding:total}</text>
    </text>

    <text name="systemInfoEx2," extra="true">
      <!-- possible bindings are :
{binding:total}, {binding:played}, {binding:favorites}, {binding:hidden}, {binding:gamesPlayed}
{binding:mostPlayed}, {binding:lastPlayedDate}
-->

      <text>
Most played : {binding:mostPlayed} 
Hidden : {binding:hidden}
Last played : {binding:lastPlayedDate}
      </text>
      <text lang="pt">
Mais jogados : {binding:mostPlayed} 
Escondidos : {binding:hidden}
Última partida : {binding:lastPlayedDate}
      </text>
      <text lang="fr">
Le plus joué : {binding:mostPlayed}
Caché : {binding:hidden}
Dernière partie : {binding:lastPlayedDate}
      </text>
      <text lang="es">
El más jugado : {binding:mostPlayed}
oculto : {binding:hidden}
Última partida : {binding:lastPlayedDate}
      </text>
      <alignment>right</alignment>
      <verticalAlignment>right</verticalAlignment>
      <fontPath>./main/fonts/ubuntu_bold.ttf</fontPath>
      <fontSize>0.022</fontSize>
      <origin>1 0</origin>
      <pos>0.78 0.43</pos>
      <size>0.50 0.28</size>
      <zIndex>100</zIndex>
      <color>ff9900</color>
      <glowColor>000000A0</glowColor>
      <systemInfoDelay>0</systemInfoDelay>
      <glowSize>1</glowSize>
    </text>
    <text name="systemInfoEx" extra="true" if="{system.name} == 'collections'">
      <text>Collections : {binding:subSystems}</text>
      <text lang="fr">Nombre de collections : {binding:subSystems}</text>
    </text>
    <text name="systemInfoEx" extra="true" if="{system.name} == 'library' || {system.name} == 'screenshots'">
      <text>Items : {binding:total}</text>
      <text lang="fr">Nombre d'élements : {binding:total}</text>
      <text lang="es">Número de elementos: {binding:total}</text>
    </text>
    </view>
</theme>
