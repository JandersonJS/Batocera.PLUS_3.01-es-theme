<?xml version="1.0" encoding="UTF-8" ?>
<theme>
    <formatVersion>4</formatVersion>

    <view name="system">
        <image name="randomImage" extra="true" ifSubset="systemview:plus|darkened|horizontal|legacy|transparent|simple|vertical|wheel|arcade">
            <path>{random:thumbnail}</path>
            <color>FFFFFF</color>
            <pos>0.5 0.475</pos>
            <origin>0.5 0.5</origin>
            <linearSmooth>true</linearSmooth>
            <minSize>1 1</minSize>
            <zIndex>11</zIndex>
        </image>

        <image name="image" extra="true" ifSubset="systemview:plus2">
            <path>{random:thumbnail}</path>
            <color>FFFFFF</color>
            <pos>0 0.025</pos>
            <minSize>0.85 0.45</minSize>
            <origin>0 0</origin>
            <linearSmooth>true</linearSmooth>
            <zIndex>34</zIndex>
        </image>

        <image name="randomImage" extra="true" ifHelpPrompts="false">
            <pos>0.5 0.5</pos>
            <minSize>1 1</minSize>
        </image>

        <image name="ControllerOverlay" extra="true">
            <visible>false</visible>
        </image>

        <image name="CenterFade" extra="true">
            <color>000000A0</color>
        </image>
  </view>
</theme>
