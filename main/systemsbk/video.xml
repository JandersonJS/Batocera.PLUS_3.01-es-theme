<?xml version="1.0" encoding="UTF-8" ?>
<theme>
    <formatVersion>7</formatVersion>

    <view name="system">

        <image name="background" extra="true">
            <color>000000FF</color>
        </image>

        <video name="backgroundStaticVideo" extra="true" ifSubset="systemview:plus|darkened|horizontal|legacy|transparent|simple|vertical|wheel|arcade">
            <path>{random}</path>
            <pos>0.5 0.475</pos>
            <origin>0.5 0.5</origin>
            <minSize>1 1</minSize>
            <linearSmooth>true</linearSmooth>
            <delay>0</delay>
            <color>FFFFFF</color>
            <effect>none</effect>
            <zIndex>20</zIndex>
        </video>

        <video name="video" extra="static" ifSubset="systemview:plus2">
            <path>{random}</path>
            <pos>0 0.025</pos>
            <minSize>0.85 0.45</minSize>
            <origin>0 0</origin>
            <linearSmooth>true</linearSmooth>
            <delay>0</delay>
            <color>FFFFFF</color>
            <effect>none</effect>
            <zIndex>35</zIndex>
        </video>

        <video name="backgroundStaticVideo" extra="true" ifHelpPrompts="false">
            <pos>0 0</pos>
            <minSize>1 1</minSize>
        </video>

        <image name="ControllerOverlay" extra="true">
            <visible>false</visible>
        </image>

        <image name="CenterFade" extra="true">
            <color>000000A0</color>
        </image>
    </view>
</theme>
