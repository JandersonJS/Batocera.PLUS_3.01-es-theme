<?xml version="1.0" encoding="UTF-8" ?>
<theme>
    <formatVersion>4</formatVersion>

    <view name="system">

        <image name="background" extra="true" ifSubset="systemview:plus|darkened|horizontal|legacy|transparent|simple|vertical|wheel|arcade">
            <tile>false</tile>
            <linearSmooth>true</linearSmooth>
            <path>./main/background/${system.theme}.jpg</path>
            <color>FFFFFFFF</color>
            <pos>0.5 0.5</pos>
            <origin>0.5 0.5</origin>
            <minSize>1 1</minSize>
            <zIndex>11</zIndex>
        </image>

        <image name="backgroundAlt" extra="true" ifSubset="systemview:plus2">
            <linearSmooth>true</linearSmooth>
            <path>./main/background/${system.theme}.jpg</path>
            <color>FFFFFFFF</color>
            <pos>0 0.025</pos>
            <minSize>0.85 0.45</minSize>
            <origin>0 0</origin>
            <zIndex>34</zIndex>
        </image>

        <image name="background" extra="true" region="eu">
        </image>

        <image name="background" extra="true" region="us">
            <path>./main/background/us/${system.theme}.jpg</path>
        </image>

        <image name="background" extra="true" region="jp">
            <path>./main/background/jp/${system.theme}.jpg</path>
        </image>

        <image name="ControllerOverlay" extra="true">
            <visible>false</visible>
        </image>

        <text name="systemInfo">
            <glowColor>00000022</glowColor>
            <zIndex>120</zIndex>
        </text>

        <image name="CenterFade" extra="true">
            <color>000000B0</color>
            <zIndex>12</zIndex>
        </image>
    </view>

    <customView name="basic,detailed,grid,Tile,Carousel,Boxes">
        <image name="backgrounde2" extra="true">
            <tile>false</tile>
            <pos>0.5 0.5</pos>
            <origin>0.5 0.5</origin>
            <color>50505090</color>
            <minSize>1 1</minSize>
            <path>./main/background/${system.theme}.jpg</path>
            <zIndex>2</zIndex>
        </image>
  </customView>
</theme>
