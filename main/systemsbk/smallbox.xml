<?xml version="1.0" encoding="UTF-8" ?>
<theme>
    <formatVersion>7</formatVersion>
    <include>./animatedbackgroundsubset.xml</include>

    <view name="system">
        <image name="box" extra="true" ifSubset="systemview:plus|darkened|horizontal|legacy|transparent|simple|vertical|wheel|arcade">
            <path>{random:thumbnail}</path>
            <color>FFFFFFFF</color>
           <origin>0.5 0.5</origin>
           <roundCorners>0.05</roundCorners>
           <visible>true</visible>
        </image>

        <image name="image" extra="true" ifSubset="systemview:plus2">
            <path>{random:thumbnail}</path>
            <color>FFFFFF</color>
            <pos>0 0.025</pos>
            <minSize>0.85 0.45</minSize>
            <origin>0 0</origin>
            <linearSmooth>true</linearSmooth>
            <zIndex>34</zIndex>
        </image>


        <image name="ControllerOverlay" extra="true">
            <visible>false</visible>
        </image>
    </view>
</theme>
