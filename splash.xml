<?xml version="1.0" encoding="UTF-8" ?>
<theme>
    <formatVersion>7</formatVersion>

    <variables>
        <baseColor>8b0000</baseColor>
        <gradientEndColor>6b2020</gradientEndColor>
        <backgroundColor>252525</backgroundColor>
        <centerFadeColor>8b000050</centerFadeColor>
    </variables>

    <subset name="colorset" displayName="${subset.colorset}">
        <include name="blue" displayName="${blue}">./main/colorsets/blue.xml</include>
        <include name="red" displayName="${red}">./main/colorsets/red.xml</include>
        <include name="green" displayName="${green}">./main/colorsets/green.xml</include>
        <include name="yellow" displayName="${yellow}">./main/colorsets/yellow.xml</include>
        <include name="violet">./main/colorsets/violet.xml</include>
        <include name="cyan">./main/colorsets/cyan.xml</include>
        <include name="orange">./main/colorsets/orange.xml</include>
        <include name="gray">./main/colorsets/gray.xml</include>
    </subset>

    <view name="splash">
        <splash name="splash">
            <backgroundColor>000000FF</backgroundColor>
        </splash>

        <image name="progressbar">
            <origin>0 0</origin>
            <pos>0.25 0.87</pos>
            <size>0.5 0.036</size>
            <color>6060607F</color>
            <colorEnd>6060607F</colorEnd>
            <roundCorners>0.01</roundCorners>
            <zIndex>50</zIndex>
        </image>

        <image name="progressbar:active">
            <tile>true</tile>
            <path>./main/media/progress.png</path>
            <color>${baseColor}</color>
            <colorEnd>${baseColor}</colorEnd>
            <zIndex>50</zIndex>
        </image>

        <image name="background">
            <path>./main/media/splash.png</path>
            <pos>0.5 0.5</pos>
            <origin>0.5 0.5</origin>
            <minSize>1 1</minSize>
            <color>${baseColor}</color>
        </image>

        <image name="logo" extra="true">
            <path>./main/media/splash_plus.svg</path>
            <pos>0.52 0.455</pos>
            <origin>0.5 0.5</origin>
            <maxSize>0.8 0.8</maxSize>
            <zIndex>13</zIndex>
        </image>

        <text name="label">
            <color>FFFFFFFF</color>
            <glowColor>00000018</glowColor>
            <glowSize>3</glowSize>
            <glowOffset>1</glowOffset>
        </text>
    </view>
</theme>
