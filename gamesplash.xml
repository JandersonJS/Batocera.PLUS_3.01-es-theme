<?xml version="1.0" encoding="UTF-8"?>
<theme>
<formatVersion>7</formatVersion>

    <subset name="colorset" displayName="${subset.colorset}">
        <include name="blue" displayName="${blue}">./main/colorsets/blue.xml</include>
        <include name="red" displayName="${red}">./main/colorsets/red.xml</include>
        <include name="green" displayName="${green}">./main/colorsets/green.xml</include>
        <include name="yellow" displayName="${yellow}">./main/colorsets/yellow.xml</include>
        <include name="violet">./main/colorsets/violet.xml</include>
        <include name="cyan">./main/colorsets/cyan.xml</include>
        <include name="orange">./main/colorsets/orange.xml</include>
        <include name="gray">./main/colorsets/gray.xml</include>
    </subset>

	<view name="splash">

		<image name="backgroundalt" extra="true">
	    	<backgroundColor>000000</backgroundColor>
			<linearSmooth>true</linearSmooth>
			<size>1 1</size>
			<zIndex>-99</zIndex>
		</image>

        <image name="fundoplus" extra="static">
            <tile>false</tile>
            <color>${baseColor}</color>
            <pos>0 0.025</pos>
            <size>0.825 0.45</size>
            <origin>0 0</origin>
            <path>./main/midia/squared.svg</path>
            <zIndex>-34</zIndex>
       </image>

        <image name="colorplus" extra="static" tinyScreen="false">
            <tile>false</tile>
      	    <color>${baseColor}</color>
            <pos>0 0</pos>
            <size>1 0.5</size>
            <origin>0 0</origin>
            <path>./main/midia/colorplus.png</path>
            <zIndex>-55</zIndex>
       </image>

        <image name="colorplus2" extra="static" tinyScreen="false">
            <tile>false</tile>
      	    <color>ffffff</color>
            <pos>0 0.665</pos>
            <size>1 0.20</size>
            <origin>0 0</origin>
            <path>./main/midia/colorplus.png</path>
            <zIndex>-20</zIndex>
       </image>

        <image name="plus-logo" extra="static" tinyScreen="false">
            <tile>false</tile>
            <pos>0.62 0.85</pos>
            <maxSize>0.28 0.20</maxSize>
            <origin>0 0</origin>
            <path>./main/logos/plus-logo.svg</path>
            <zIndex>0</zIndex>
       </image>
	
		<text name="loading" extra="true">
			<text>Wait for a moment...</text>
			<text lang="es">Espera un momento...</text>
			<text lang="fr">Attendez un instant...</text>
			<text lang="pt">Aguarde um instante...</text>
			<origin>0.5 0.5</origin>
			<pos>0.5 0.58</pos>
			<color>ff9900</color>
			<fontPath>./main/fonts/ubuntu_bold.ttf</fontPath>
			<fontSize>0.040</fontSize>
			<glowColor>00000035</glowColor>
			<glowSize>1</glowSize>
			<glowOffset>3 2</glowOffset>
            <forceUppercase>1</forceUppercase>
			<zIndex>05</zIndex>
		</text>

        <image name="backgroundband1" extra="static">
            <pos>0.829 0</pos>
            <size>0.03 1.5</size>
            <origin>0 0</origin>
            <zIndex>-10</zIndex>
            <color>${baseColor}</color>
            <path>./main/midia/squared.svg</path>
        </image>

        <image name="backgroundband2" extra="static">
            <pos>0.858 0</pos>
            <size>0.03 1.5</size>
            <origin>0 0</origin>
            <zIndex>-10</zIndex>
            <color>${baseColor}</color>
            <path>./main/midia/square.svg</path>
        </image>

        <image name="backgroundband3" extra="static">
            <pos>0.887 0</pos>
            <size>0.03 1</size>
            <origin>0 0</origin>
            <zIndex>-10</zIndex>
			<color>${baseColor}</color>
            <path>./main/midia/darkest.svg</path>
        </image>

        <image name="backgroundband4" extra="static">
            <pos>0.916 0</pos>
            <size>0.03 1</size>
            <origin>0 0</origin>
            <zIndex>-10</zIndex>
            <color>ff9900</color>
            <path>./main/midia/band.svg</path>
        </image>

        <include>./main/layouts/${system.theme}.xml</include>

        <image name="backgroundband5" extra="static">
            <pos>0 0</pos>
            <size>0.03 1.5</size>
            <origin>0 0</origin>
            <color>${baseColor}</color>
            <zIndex>-10</zIndex>
            <path>./main/midia/square.svg</path>
        </image>

        <image name="backgroundband6" extra="static">
            <pos>0.029 0</pos>
            <size>0.03 1.5</size>
            <origin>0 0</origin>
            <color>${baseColor}</color>
            <zIndex>-10</zIndex>
            <path>./main/midia/squared.svg</path>
        </image>

        <image name="backgroundband7" extra="static">
            <pos>0.058 0</pos>
            <size>0.03 1</size>
            <origin>0 0</origin>
            <color>${baseColor}</color>
            <zIndex>-10</zIndex>
            <path>./main/midia/band.svg</path>
        </image>

        <image name="backgroundband8" extra="static">
            <size>0.03 1</size>
            <pos>0.087 0</pos>
            <origin>0 0</origin>
            <zIndex>-10</zIndex>
            <color>ffffff</color>
            <path>./main/midia/band.svg</path>
        </image>

		<image name="background">
			<origin>0.5 0.5</origin>
			<pos>0.5 0.25</pos>
			<minSize>0.3 0.3</minSize>
			<roundCorners>0</roundCorners>
			<linearSmooth>true</linearSmooth>
			<color>ffffff</color>
			<colorEnd>404040</colorEnd>
			<gradientType>vertical</gradientType>
      		<horizontalAlignment>right</horizontalAlignment>
			<zIndex>3</zIndex>
		</image>

		<text name="label">
			<pos> 0.75</pos>
			<fontPath>./main/fonts/ubuntu_bold.ttf</fontPath>
			<color>ff9900</color>
			<fontSize>0.065</fontSize>
			<alignment>center</alignment>
			<glowColor>00000035</glowColor>
			<glowSize>1</glowSize>
			<glowOffset>3 2</glowOffset>
			<visible>empty({game:rom})</visible>
		</text>

		<image name="logo-splash" extra="true">
			<path>{game:marquee}</path>
			<pos>0.5 0.76</pos>
			<origin>0.5 0.5</origin>
			<maxSize>0.50 0.20</maxSize>
			<zIndex>05</zIndex>
			<visible>!empty({game:name})</visible>
			<linearSmooth>true</linearSmooth>
		</image>

		<text name="name-splash" extra="true" ifSubset="hotkeytips:yes">
			<visible>true</visible>
			<text>{game:name}</text>
			<pos>0.023 0.175</pos>
			<size>0.25 0.08</size>
			<color>ff9900</color>
			<backgroundColor>FF000000</backgroundColor>
			<fontSize>0.028</fontSize>
			<alignment>left</alignment>
			<verticalAlignment>center</verticalAlignment>
			<fontPath>./main/fonts/ubuntu_bold.ttf</fontPath>
			<origin>0 0</origin>
			<glowColor>00000035</glowColor>
			<glowSize>1</glowSize>
			<glowOffset>3 2</glowOffset>
			<zIndex>05</zIndex>
			<autoScroll>horizontal</autoScroll>
			<singleLineScroll>true</singleLineScroll>
			<autoScrollDelay>0</autoScrollDelay>
		</text>

       	<image name="hotkey-tips" extra="true" ifSubset="hotkeytips:yes">
			<visible>true</visible>
			<color>ff9900</color>
			<origin>1 0.5</origin>
			<pos>1 0.35</pos>
			<maxSize>0.55</maxSize>		
			<path>./main/hotkey-tips/gamesplash.png</path>
			<path>./main/hotkey-tips/gamesplash-${lang}.png</path>
			<linearSmooth>true</linearSmooth>
			<zIndex>9</zIndex>
		</image>

       	<image name="hotkeyBack" extra="true" ifSubset="hotkeytips:yes">
			<visible>true</visible>
			<path>./main/midia/band.svg</path>
			<origin>1 0.5</origin>
			<pos>1 0.35</pos>
			<size>0.27 0.65</size>
            <color>${baseColor}bb</color>
			<linearSmooth>true</linearSmooth>
			<zIndex>8</zIndex>
		</image>

       	<image name="infoBack" extra="true" ifSubset="hotkeytips:yes">
			<visible>true</visible>
			<path>./main/midia/band.svg</path>
			<origin>0 0</origin>
			<pos>0 0.17</pos>
			<size>0.37 0.25</size>
            <color>${baseColor}bb</color>
			<linearSmooth>true</linearSmooth>
			<zIndex>-8</zIndex>
		</image>


		<text name="name-splash" extra="true" ifSubset="hotkeytips:no">
       		<visible>false</visible>
		</text>

       	<image name="hotkey-tips" extra="true" ifSubset="hotkeytips:no">
       		<visible>false</visible>
		</image>

       	<image name="hotkeyBack" extra="true" ifSubset="hotkeytips:no">
       		<visible>false</visible>
		</image>

       	<image name="infoBack" extra="true" ifSubset="hotkeytips:no">
       		<visible>false</visible>
		</image>


		<splash name="splash">
			<backgroundColor>000000FF</backgroundColor>
		</splash>

		<stackpanel name="container-gamedata" extra="static" ifSubset="hotkeytips:yes">
			<separator>0.015</separator>
			<pos>0.025 0.26</pos>
			<size>0.5 0.032</size>
			<orientation>horizontal</orientation>
			<backgroundColor>FF000000</backgroundColor>
			<zIndex>09</zIndex>
	
			<image name="icons-releaseyear">
			<visible>true</visible>
				<path>./main/midia/game_info_releasedate.svg</path>
				<linearSmooth>true</linearSmooth>
				<color>ff9900</color>
				<padding>0 0</padding>
				<maxSize>1 1</maxSize>
				<visible>!empty({game:releaseyear})</visible>
			</image>
			<text name="gamedata-releaseyear">
			<visible>true</visible>
				<fontSize>0.025</fontSize>
				<fontPath>./main/fonts/ubuntu_bold.ttf</fontPath>
				<text>{game:releaseyear}</text>
				<color>ff9900</color>
				<glowColor>00000035</glowColor>
				<glowSize>1</glowSize>
				<glowOffset>3 2</glowOffset>
				<visible>!empty({game:releaseyear})</visible>
			</text>
	
			<image name="icons-publisher">
				<path>./main/midia/game_info_publisher.svg</path>
				<linearSmooth>true</linearSmooth>
			<color>ff9900</color>
				<padding>0 0</padding>
				<maxSize>1 1</maxSize>
				<visible>{game:publisher} != {game:developer} &amp;&amp; !empty({game:publisher})</visible>
			</image>
			<text name="gamedata-publisher">
				<fontSize>0.025</fontSize>
				<fontPath>./main/fonts/ubuntu_bold.ttf</fontPath>
				<text>{game:publisher}</text>
				<color>ff9900</color>
				<glowColor>00000035</glowColor>
				<glowSize>1</glowSize>
				<glowOffset>3 2</glowOffset>
				<visible>{game:publisher} != {game:developer} &amp;&amp; !empty({game:publisher})</visible>
			</text>
	
			<image name="icons-developer">
				<path>./main/midia/game_info_developer.svg</path>
				<linearSmooth>true</linearSmooth>
				<color>ff9900</color>
				<padding>0 0</padding>
				<maxSize>1 1</maxSize>
				<visible>{game:publisher} != {game:developer} &amp;&amp; !empty({game:developer})</visible>
			</image>
			<text name="gamedata-developer">
				<fontSize>0.025</fontSize>
				<fontPath>./main/fonts/ubuntu_bold.ttf</fontPath>
				<text>{game:developer}</text>
				<color>ff9900</color>
				<glowColor>00000035</glowColor>
				<glowSize>1</glowSize>
				<glowOffset>3 2</glowOffset>
				<visible>{game:publisher} != {game:developer} &amp;&amp; !empty({game:developer})</visible>
			</text>
	
			<image name="icons-developer-publisher">
				<path>./main/midia/game_info_publisher.svg</path>
				<linearSmooth>true</linearSmooth>
				<color>ff9900</color>
				<padding>0 0</padding>
				<maxSize>1 1</maxSize>
				<visible>{game:publisher} == {game:developer} &amp;&amp; !empty({game:publisher}) &amp;&amp; !empty({game:developer})</visible>
			</image>
			<image name="icons-developer-publisher2">
				<path>./main/midia/game_info_developer.svg</path>
				<linearSmooth>true</linearSmooth>
				<color>ff9900</color>
				<padding>0 0</padding>
				<maxSize>1 1</maxSize>
				<visible>{game:publisher} == {game:developer} &amp;&amp; !empty({game:publisher}) &amp;&amp; !empty({game:developer})</visible>
			</image>
			<text name="gamedata-developer-publisher">
				<fontSize>0.025</fontSize>
				<fontPath>./main/fonts/ubuntu_bold.ttf</fontPath>
				<text>{game:developer}</text>
				<color>ff9900</color>
				<glowColor>00000035</glowColor>
				<glowSize>1</glowSize>
				<glowOffset>3 2</glowOffset>
				<visible>{game:publisher} == {game:developer} &amp;&amp; !empty({game:publisher}) &amp;&amp; !empty({game:developer})</visible>
			</text>
		</stackpanel>

		<stackpanel name="container-gamedata2" extra="true" ifSubset="hotkeytips:yes">
			<separator>0.018</separator>
			<pos>0.025 0.31</pos>
			<size>0.5 0.032</size>
			<orientation>horizontal</orientation>
			<backgroundColor>FF000000</backgroundColor>
			<zIndex>05</zIndex>

			<text name="gamedata-stars">
				<fontSize>0.025</fontSize>
				<text>{game:stars}</text>
				<color>ff9900</color>
				<glowColor>00000035</glowColor>
				<glowSize>1</glowSize>
				<glowOffset>3 2</glowOffset>
				<visible>!empty({game:stars})</visible>
			</text>
	
			<image name="icons-genre">
				<path>./main/midia/game_info_genre.svg</path>
				<linearSmooth>true</linearSmooth>
				<color>ff9900</color>
				<padding>0 0</padding>
				<maxSize>1 1</maxSize>
				<visible>!empty({game:genre})</visible>
			</image>
			<text name="gamedata-genre">
				<fontSize>0.025</fontSize>
				<fontPath>./main/fonts/ubuntu_bold.ttf</fontPath>
				<text> {game:genre}</text>
				<color>ff9900</color>
				<glowColor>00000035</glowColor>
				<glowSize>1</glowSize>
				<glowOffset>3 2</glowOffset>
				<singleLineScroll>true</singleLineScroll>
				<autoScrollDelay>0</autoScrollDelay>
				<visible>!empty({game:genre})</visible>
			</text>
		</stackpanel>

		<stackpanel name="container-icons" extra="true" ifSubset="hotkeytips:yes">
			<separator>0.015</separator>
			<pos>0.024 0.36</pos>
			<size>0.7 0.032</size>
			<orientation>horizontal</orientation>
			<backgroundColor>FF000000</backgroundColor>
			<zIndex>09</zIndex>

			<image name="flag-region">
				<path>./main/midia/flags/{game:region}.png</path>
				<maxSize>1</maxSize>
				<linearSmooth>true</linearSmooth>
				<opacity>0.8</opacity>
				<visible>{game:region} != {game:lang} &amp;&amp; !contains(lower({game:region}), ',') &amp;&amp; !empty({game:region})</visible>
			</image>
	
			<image name="flag-force-world">
				<path>./main/midia/flags/wr.png</path>
				<maxSize>1</maxSize>
				<linearSmooth>true</linearSmooth>
				<opacity>0.8</opacity>
				<visible>contains(lower({game:region}), ',') &amp;&amp; !empty({game:region})</visible>
			</image>
	
			<image name="flag-lang">
				<path>./main/midia/flags/{game:lang}.png</path>
				<maxSize>1</maxSize>
				<linearSmooth>true</linearSmooth>
				<opacity>0.8</opacity>
				<visible>!contains(lower({game:lang}), ',') &amp;&amp; !empty({game:lang})</visible>
			</image>
	
			<text name="gamedata-lang">
				<fontSize>0.02</fontSize>
				<fontPath>./main/fonts/ubuntu_bold.ttf</fontPath>
				<text>{game:lang}.upper()</text>
				<color>ff9900</color>
				<glowColor>00000035</glowColor>
				<glowSize>1</glowSize>
				<glowOffset>3 2</glowOffset>
				<singleLineScroll>true</singleLineScroll>
				<autoScrollDelay>0</autoScrollDelay>
				<y>0.02</y>
				<visible>contains(lower({game:lang}), ',') &amp;&amp; !empty({game:lang})</visible>
			</text>

			<text name="container-separator">
				<text> |</text>
				<fontSize>0.03</fontSize>
				<color>ff9900</color>
				<fontPath>./main/fonts/ubuntu_bold.ttf</fontPath>
				<visible>!empty({game:lang}) || !empty({game:region}) </visible>
			  </text>

			<text name="icons-players">
				<fontPath>./main/fonts/ubuntu_bold.ttf</fontPath>
				<text>{game:playerCount}</text>
				<alignment>center</alignment>
				<fontSize>0.03</fontSize>
				<color>ff9900</color>
			</text>
	
			<image name="icons-cheevos">
				<visible>{game:cheevos}</visible>
				<path>./main/icons/Contest.png</path>
				<linearSmooth>true</linearSmooth>
				<color>ff9900</color>
				<padding>0 0</padding>
				<maxSize>1 1</maxSize>
			</image>
	
			<image name="icons-wheel">
				<visible>{game:wheelGame}</visible>
				<linearSmooth>true</linearSmooth>
				<padding>0 0</padding>
				<path>./main/midia/wheel.svg</path>
				<maxSize>1 1</maxSize>
				<color>ff9900</color>
			</image>
	
			<image name="icons-gun">
				<visible>{game:gunGame}</visible>
				<linearSmooth>true</linearSmooth>
				<padding>0 0</padding>
				<path>./main/midia/gun.svg</path>
				<maxSize>1 1</maxSize>
				<color>ff9900</color>
			</image>

			<image name="icons-padtokey">
				<visible>{game:hasKeyboardMapping}</visible>
				<linearSmooth>true</linearSmooth>
				<padding>0 0</padding>
				<path>./main/midia/padtokey.png</path>
				<maxSize>1 1</maxSize>
				<color>ff9900</color>
			</image> 
		</stackpanel>

		<text name="name-splash" extra="true" ifSubset="hotkeytips:yes">
			<visible>true</visible>
			<text>{game:name}</text>
			<pos>0.023 0.175</pos>
			<size>0.25 0.08</size>
			<color>ff9900</color>
			<backgroundColor>FF000000</backgroundColor>
			<fontSize>0.028</fontSize>
			<alignment>left</alignment>
			<verticalAlignment>center</verticalAlignment>
			<fontPath>./main/fonts/ubuntu_bold.ttf</fontPath>
			<origin>0 0</origin>
			<glowColor>00000035</glowColor>
			<glowSize>1</glowSize>
			<glowOffset>3 2</glowOffset>
			<zIndex>05</zIndex>
			<autoScroll>horizontal</autoScroll>
			<singleLineScroll>true</singleLineScroll>
			<autoScrollDelay>0</autoScrollDelay>
		</text>

       	<image name="hotkey-tips" extra="true" ifSubset="hotkeytips:yes">
			<visible>true</visible>
			<color>ff9900</color>
			<origin>1 0.5</origin>
			<pos>1 0.35</pos>
			<maxSize>0.60</maxSize>
			<maxSize tinyScreen="true">0.45</maxSize>			
			<path>./main/hotkey-tips/gamesplash.png</path>
			<path>./main/hotkey-tips/gamesplash-${lang}.png</path>
			<linearSmooth>true</linearSmooth>
			<zIndex>9</zIndex>
		</image>

       	<image name="hotkeyBack" extra="true" ifSubset="hotkeytips:yes">
			<visible>true</visible>
			<path>./main/midia/band.svg</path>
			<origin>1 0.5</origin>
			<pos>1 0.35</pos>
			<size>0.27 0.65</size>
            <color>${baseColor}bb</color>
			<linearSmooth>true</linearSmooth>
			<zIndex>8</zIndex>
		</image>

       	<image name="infoBack" extra="true" ifSubset="hotkeytips:yes">
			<visible>true</visible>
			<path>./main/midia/band.svg</path>
			<origin>0 0</origin>
			<pos>0 0.17</pos>
			<size>0.29 0.25</size>
            <color>${baseColor}bb</color>
			<linearSmooth>true</linearSmooth>
			<zIndex>4</zIndex>
		</image>

		<splash name="splash">
			<backgroundColor>000000FF</backgroundColor>
		</splash>

		<stackpanel name="container-gamedata" extra="false" ifSubset="hotkeytips:no">

		</stackpanel>

		<stackpanel name="container-gamedata2" extra="false" ifSubset="hotkeytips:no">

		</stackpanel>

		<stackpanel name="container-icons" extra="false" ifSubset="hotkeytips:no">
			
		</stackpanel>


	</view>

</theme>
